@model IEnumerable<Everest_Video_Library.Models.VideoLibrary.ArtistAlbum>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Album Name
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Artists.FirstName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Albums.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Artists.FirstName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }, new { @class="btn btn-primary n-2"}) 
            @Html.ActionLink("Details", "Details", new { id=item.Id },new { @class="btn btn-success m-2"}) 
            @Html.ActionLink("Delete", "Delete", new { id=item.Id },new { @class="btn btn-danger m-2"})
        </td>
    </tr>
}

</table>
